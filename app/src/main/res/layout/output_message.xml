<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="14dp"
    android:paddingStart="60dp"
    android:paddingEnd="15dp">

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/output_message_style"
        android:elevation="2dp"
        android:padding="8dp"
        android:text="@string/output_message__sample_text"
        android:textColor="#fff"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_body"

        android:layout_alignParentLeft="false"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/message_body"
        android:text="@string/message_sample_time"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorBackground"
        android:textSize="10dp" />
</RelativeLayout>